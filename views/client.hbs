<div class="page-header flex-wrap">
    <div class="header-left">
        <a href="/" type="button" class="btn btn-primary mt-2 mt-sm-0 btn-sm btn-icon-text">
            <i class="mdi mdi-keyboard-backspace"></i>
        </a>
        <a href="/appointment/add/{{client.id}}" class="btn btn-outline-primary mb-2 mb-md-0"> Create new appointment </a>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 grid-margin">
        <div class="card stretch-card mb-3">
            <div class="card-body d-flex flex-wrap justify-content-between">
            <div>
                <h4 class="font-weight-semibold mb-1 text-black"> Visits </h4>
            </div>
            <h3 class="text-success font-weight-bold">{{appointmentCount}}</h3>
            </div>
        </div>
    </div>

    <div class="col-xl-12 grid-margin">
        <div class="card stretch-card mb-3">
            <div class="card-body d-flex flex-wrap justify-content-between">
                <div>
                    <h4 class="font-weight-semibold mb-1 text-black"> {{client.fname}} {{client.lname}}</h4>
                    <h6 class="text-muted">{{client.phone}}</h6>
                </div>
                <h3 class="text-success font-weight-bold">
                    <a href="/client/edit/{{client.id}}" type="button" class="btn btn-primary mt-2 mt-sm-0 btn-sm btn-icon-text">
                        <i class="mdi mdi-grease-pencil"></i>
                    </a>
                </h3>
            </div>
        </div>
    </div>

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Appointments</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each appointments}}
                    <tr>
                        <td>{{dateFormat date}}</td>
                        <td>
                            {{details}}
                        </td>
                        <td><a href="/appointment/edit/{{id}}"><i class="mdi mdi-grease-pencil"></i></a></td>
                    </tr>
                    {{/each}}
                </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
</div>

 
