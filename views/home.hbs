<div class="page-header flex-wrap">
    <div class="header-left">
        <a class="btn btn-primary mb-2 mb-md-0 mr-2" href="/client/add/new"> Create new client </a>
    </div>
</div>

<div class="row">
    <div class="col-xl-6 grid-margin">
        <div class="card stretch-card mb-3">
            <div class="card-body d-flex flex-wrap justify-content-between">
            <div>
                <h4 class="font-weight-semibold mb-1 text-black"> Appointments </h4>
            </div>
            <h3 class="text-success font-weight-bold">{{appointmentCount}}</h3>
            </div>
        </div>
    </div>
    <div class="col-xl-6 grid-margin">
        <div class="card stretch-card mb-3">
            <div class="card-body d-flex flex-wrap justify-content-between">
            <div>
                <h4 class="font-weight-semibold mb-1 text-black"> Clients </h4>
            </div>
            <h3 class="text-success font-weight-bold">{{clientCount}}</h3>
            </div>
        </div>
    </div>
 
    <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Clients</h4>
        <div class="table-responsive">
            <table class="table table-striped">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each clients}}
                
                <tr>
                    <td class="py-1">
                        <img src="assets/images/faces-clipart/pic-1.png" alt="image" />
                    </td>
                    <td><a href="/client/{{id}}">{{lname}} {{fname}}</a></td>
                    <td>
                        {{phone}}
                    </td>
                    <td>{{email}}</td>
                    <td>
                        <a href="/client/edit/{{id}}"><i class="mdi mdi-grease-pencil"></i></a>
                        {{!-- <a href="/client/delete/{{id}}"><i class="mdi mdi-delete"></i></a> --}}
                    </td>
                </tr>
                
                {{/each}}
            </tbody>
            </table>
        </div>
        </div>
    </div>
    </div>
</div>

